 Console.Write("Do you want to play a game (yes --> y) (no --> n)");
                        choise = Console.ReadLine();
                        Console.WriteLine(choise);
                        if (choise == "y" )
                        {
                            Console.WriteLine("Lets play rock paper scissor! ");

                            Console.Write("OK? (yes --> y) (no --> n)");
                            string awnser = Console.ReadLine();

