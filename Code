                            {
                                Console.Write("What do you choose? (Rock --> r) (Paper --> p) (Scissor --> s)");
                                choise = Console.ReadLine();
                                Console.WriteLine(choise);
                                if (choise == "r")
                                {
                                    Console.WriteLine("You choose the rock!!");
                                    Random computerChoise = new Random();
                                    int computerChoiseRPS = computerChoise.Next(0, 3);

                                    if (computerChoiseRPS == 0)
                                    {
                                        Console.WriteLine("The computer chooses rock! It's a draw!");
                                        Console.Write("Do you want to play another round? (yes --> y) (no --> n)");
                                        awnser = Console.ReadLine();
                                    }
                                    if (computerChoiseRPS == 1)
                                    {
                                        Console.WriteLine("The computer chooses paper! You lose!");
                                        Console.Write("Do you want to play another round? (yes --> y) (no --> n)");
                                        awnser = Console.ReadLine();
                                    }
                                    if (computerChoiseRPS == 2)
                                    {
                                        Console.WriteLine("The computer chooses scissor! You win!");
                                        Console.Write("Do you want to play another round? (yes --> y) (no --> n)");
                                        awnser = Console.ReadLine();
                                    }
                                }
                                else if (choise == "p")
                                {
                                    Console.WriteLine("You choose the paper!!");
